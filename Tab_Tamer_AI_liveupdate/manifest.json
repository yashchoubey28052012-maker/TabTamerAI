{
  "manifest_version": 3,
  "name": "Tab Tamer AI",
  "version": "1.0.1",
  "description": "Capture open tabs, group and summarize them locally with privacy-first offline AI.",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}